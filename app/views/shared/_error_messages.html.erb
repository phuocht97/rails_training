<% if @user.errors.any? %>
	<div class="error_explanation">
		<div class="alert alert-danger" role="alert">
			The form contains <%= pluralize(@user.errors.count, "error") %>.
		</div>
	</div>
	<div class="">
		<ul class="list__error">
			<% @user.errors.full_messages.each do |msg| %>
			  <li>* <%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>